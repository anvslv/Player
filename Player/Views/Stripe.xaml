<services:BaseWindow x:Class="Player.View.Views.Stripe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
        xmlns:services="clr-namespace:Player.View.Services"
        Title="Stripe" 
        Height="{StaticResource StripeHeight}" 
        MinHeight="{StaticResource StripeHeight}"
        MaxHeight="{StaticResource StripeHeight}"
        Width="{StaticResource StripeWidth}" 
        MaxWidth="{StaticResource StripeMaxWidth}" 
        MinWidth="{StaticResource StripeMinWidth}" 
        WindowStyle="None" 
        ResizeMode="{Binding ThisResizeMode}"
        ShowInTaskbar="False" 
        AllowsTransparency="True" 
                     AllowDrop="True"
        Background="{StaticResource PlayerBackgorund}" > 
    <Grid> 
        <DockPanel>
            <Border x:Name="Draggable" Height="5" VerticalAlignment="Top" 
                    DockPanel.Dock="Top" Background="{StaticResource Middle}"/>

            <Slider DockPanel.Dock="Top" 
                    Name="CusomSlider" 
                    Style="{StaticResource MyCustomStyleForSlider}" 
                    Height="15" VerticalAlignment="Top"
                    Margin="5,5,5,0" 
                    IsMoveToPointEnabled="True"
                    Maximum="{Binding Path=TotalSeconds}"
                    Value="{Binding Path=CurrentSeconds}" />
            
            <Label DockPanel.Dock="Left" Content="{Binding Title}"
                   x:Name="Title" Margin="5,0,5,5" 
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom" />
            <Label DockPanel.Dock="Right" 
                   Content="{Binding Time}"
                   x:Name="Time" Margin="5,0,5,5" 
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Right" />
            
        </DockPanel> 
    </Grid>
    
</services:BaseWindow>
